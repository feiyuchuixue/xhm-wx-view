/*图片轮播*/

.huandeng image {
  width: 100%;
  height: 360rpx;
}

.tt {
  text-align: center;
}

.a1 {
  margin: 15rpx auto;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.a1 image {
  width: 720rpx;
  height: 240rpx;
  margin: 0 auto;
}

.search {
  width: 90%;
  margin: 0 auto;
}

.search_arr {
  border: 1px solid #dedede;
  border-radius: 30rpx;
  margin-left: 0rpx;
  background: #efefef;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
  font-size: 32rpx;
}

.page_row {
  display: flex;
  flex-direction: row;
  padding-bottom: 15rpx;
  box-shadow: 0 4rpx 6rpx #eee;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 30rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.scroll-x {
  height: 86rpx;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.banner{
  width: 100%;
  height:130rpx;
  text-align: center;
  background: #eee;
  padding:20rpx 0;
}
.banner image{
  width:80%;
  max-height:139rpx;
  margin:0 auto;
}
.view-parent {
  display: inline-block;
}

.view-item {
  height: 86rpx;
  line-height: 86rpx;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  font-size: 30rpx;
  color: #222;
  margin: 0 30rpx;
}

.goods_list {
  width: 96%;
  padding:0rpx 2%;
  background: #eee;
}

.view-goods {
  width: 345rpx;
  height: 460rpx;
  margin:8rpx 7.5rpx;
  overflow: hidden;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 0 0 10rpx #bbb;
}

.view-goods .a_img {
  width: 345rpx;
  height: 260rpx;
  text-align: center;
  overflow: hidden;
}

.a_ttl {
  width: 325rpx;
  height: 36rpx;
  padding: 0 10rpx;
  margin: 10rpx auto;
  display: block;
  overflow: hidden;
}

.a_ttl text {
  width: 325rpx;
  height: 36rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 36rpx;
  font-size: 28rpx;

}
.a_intr{
  width: 325rpx;
  height: 84rpx;
  padding: 0 10rpx;
  margin: 10rpx auto;
  display: block;
  overflow: hidden;
}
.a_intr text{
  width: 325rpx;
  height: 84rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  line-height: 28rpx;
  font-size: 24rpx;
  color:#777
}
.a_note {
  height: 40rpx;
  overflow: hidden;
}

.a_price {
  width: 160rpx;
  height: 40rpx;
  overflow: hidden;
  float: left;
  margin: 0 10rpx;
  font-size:28rpx;
  line-height:40rpx;
  font-weight:500;
  color:#c21111;
}
.a_sign{
  width: 140rpx;
  height:40rpx;
  float: left;
}
.a_sign text{
  height:36rpx;
  width:100rpx;
  display:block;
  text-align: center;
  line-height:36rpx;
  font-size:20rpx;
  color: #fff;
  background:#e96161;
  margin:2rpx auto;
  border-radius:10rpx;
}
