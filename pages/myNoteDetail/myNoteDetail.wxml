<!--pages/myNoteDetail/myNoteDetail.wxml-->
<cover-view class='goods_prew_select'>
    <cover-view class='tab ' style="color:orange" hidden="{{orangeHidden}}" data-current="0" bindtap='checkCurrent'>审核中</cover-view>
    <cover-view class='tab ' style="color:green" hidden="{{greenHidden}}" data-current="1" bindtap='checkCurrent'>审核通过</cover-view>
    <cover-view class='tab ' style="color:red" hidden="{{redHidden}}" data-current="2" bindtap='checkCurrent'>审核失败</cover-view>
</cover-view>
<swiper current="{{currentData}}" class='type_swiper' duration="300" bindchange="bindchange">
    <swiper-item hidden="true">
        <image class='video' src="{{video}}" width="750" height="750" />
    </swiper-item>
    <swiper-item>
        <view class='huandeng'>
            <swiper indicator-dots="true" autoplay="true" interval="5000">
                <block wx:for="{{imgUrls}}" wx:key="key">
                    <swiper-item>
                        <image src="{{fileUrl + item}}"  bindload="imageLoad" data-index="{{ index }}"
                               style="width:{{ images[index].width }}rpx; height:{{ images[index].height }}rpx;"  />
                    </swiper-item>
                </block>
            </swiper>
        </view>
    </swiper-item>
</swiper>
<view class="goods_intr">

    <view class='goods_title'>
        <text>{{articleTitle}}</text>
    </view>
    <view class='goods_info'>
        <text>
            {{articleContent}}
        </text>

        <button size='mini' class="topics goods_info " id="{{articleTopicsId}}" >{{articleTopics}}</button>

    </view>
    <view class='goods_info'>
        <text>
            {{articleCreateTime}}
        </text>
    </view>
<!--    <view class="line goods_info">
        <text>
            共 {{commentCount}} 条评论
        </text>
    </view>-->

    <view wx:if="{{comments.length>0}}" class="photo_info_box">
        <!-- 图文评论列表 -->
        <view class="photo_comment_box">
            <text class="goods_info"> 共 {{commentCount}} 条评论</text>
            <view wx:for="{{comments}}" wx:for-item="comment" wx:key="index" class="commment_list">
                <!-- index < 3 在视频下面只显示三条记录 -->
                <view wx:if="{{index < 3}}">
                    <view class="comment_info">
                        <view class="c_info_view">
                            <image src="{{comment.userLogo}}"></image>
                            <text class="goods_info" style="color: blue">{{comment.userName}}</text>
                        </view>
                        <text class="c_date_txt">{{comment.commentCreateTime}}</text>
                    </view>
                    <view class="goods_info" style="margin-top: 10rpx;margin-left: 40rpx">{{comment.commentContentReplace}}</view>
                </view>
            </view>

            <!-- 查看更多评论 -->
            <view bindtap="toggleDialogHandle">
                <view class="load_more_box">查看更多评论</view>
            </view>
        </view>
    </view>
    <view wx:else class="no_comment">
        <text>{{comments.length}}</text>
        <text class="load_more_box">暂时没有评论！</text>
    </view>




</view>



