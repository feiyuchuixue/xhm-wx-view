  width:374rpx;
  height:50rpx;
  float: left;
  margin:10rpx 0 20rpx 0;
}
.btn_l{
  border-right:1rpx solid #ddd;
}

.btn_r{
  border-left:1rpx solid #aaa;
}
.btn button{
  width:60%;
  height:50rpx;
  margin:0rpx auto;
  line-height:50rpx;
  font-size:24rpx;
}
