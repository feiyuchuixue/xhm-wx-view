.tab {
  float: left;
  width: 15%;
  margin:0 5%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 28rpx;
  font-weight: 400;

}

.topTabSwiper {
  zoom: 1;
  padding: 20rpx 10%;
  height: 60rpx;
}

.topTabSwiper:after {
