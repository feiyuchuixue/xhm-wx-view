.tab {
  float: left;
  width: 15%;
  margin:0 5%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 28rpx;
  font-weight: 400;

}

.topTabSwiper {
  zoom: 1;
  padding: 20rpx 10%;
  height: 60rpx;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 6rpx solid #f00;
  color: #f00;
}

.swiper {
  width: 100%;
  background: #eee;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}
