  width: 300rpx;
  height: 64rpx;
  border-radius: 32rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  border: 1rpx solid #ddd;
}

.menu {
  float: left;
  width: 90rpx;
  height: 64rpx;
  border-radius: 32rpx;
  line-height: 64rpx;
  font-size: 28rpx;
