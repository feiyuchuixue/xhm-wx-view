<!--pages/mine/mine.wxml-->
<view class='user'>
  <view wx:for="{{user}}" wx:key="key" class='u_head'>
    <image src='{{item.head}}'></image>
  </view>
  <view class='count'>
    <view class='count_list'>
      <view wx:for="{{num}}" wx:key="key" class="view-parent">
        <view class="view-item">{{item.count}}</view>
        <view class="view-item">{{item.txt}}</view>
      </view>
    </view>
    <view>
      <button class='edit'>编辑资料</button>
      <button class='menu'>囧</button>
    </view>
  </view>
  <view class='plus'>
    <!-- <view class='sex'>♂</view>
    <text class='text_plus'>R加入小红猪会员></text> -->
    <view class='btn btn_l' bindtap='createArticle'>
      <button>上传</button>
    </view>
    <view class='btn btn_r'  bindtap='createArticle2'>
      <button>积分</button>
    </view>
  </view>
  <view class="">
  </view>
</view>
<view class='topTabSwiper'>
  <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}' data-current="0" bindtap='checkCurrent'>笔记</view>
  <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}' data-current="1" bindtap='checkCurrent'>收藏</view>

</view>
<swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
  <swiper-item>
<!--
    <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHeight}}px;"
                 class="list" bindscrolltolower="bindDownLoad" bindscrolltoupper="topLoad"  bindscroll="scroll">
-->

    <component-scroll style="background: red" isNeedLoadmore bind:_loadmore="loadmore" bind:_refresh="refresh" allloaded="{{allloaded}}" isEmpty="{{!loading &&list.length<=0}}">



    <view class='swiper_con' >
      <view class='article_list'>
        <view wx:for="{{article}}" wx:key="key" class="view-parent">
          <view class="view-article">
            <view class='a_img'>
              <image src="{{fileUrl + item.articleLogo}}" bindtap="kecheng1"></image>
            </view>
            <view class='a_ttl'>
              <text>{{item.articleTopics +  item.articleTitle}}</text>
   <!--           <text>{{item.articleTopics + item.articleContent}}</text>-->
            </view>
            <view class='a_note'>
              <view class='a_head'>
                <image src="{{fileUrl + item.articleLogo}}"></image>
              </view>
              <view class='a_name'>
                <text>{{item.articleCreateUserName}}</text>
              </view>
              <view class='a_read'>{{item.articleTotalLike}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>

    </component-scroll>



  </swiper-item>

  <swiper-item>
    <view class='swiper_con'>粉丝</view>
  </swiper-item>


</swiper>
