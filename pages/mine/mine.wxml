<!--pages/mine/mine.wxml-->
<view class='user'>
  <view wx:for="{{user}}" wx:key="key" class='u_head'>
    <image src='{{item.head}}'></image>
  </view>
  <view class='count'>
    <view class='count_list'>
      <view wx:for="{{num}}" wx:key="key" class="view-parent">
        <view class="view-item">{{item.count}}</view>
        <view class="view-item">{{item.txt}}</view>
      </view>
    </view>
    <view>
      <button class='edit'>编辑资料</button>
      <button class='menu'>囧</button>
    </view>
  </view>
  <view class='plus'>
    <!-- <view class='sex'>♂</view>
    <text class='text_plus'>R加入小红猪会员></text> -->
    <view class='btn btn_l' bindtap='createArticle'>
      <button>上传</button>
    </view>
    <view class='btn btn_r'  bindtap='createArticle2'>
      <button>积分</button>
    </view>
  </view>
  <view class="">
  </view>
</view>
<view class='topTabSwiper'>
  <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}' data-current="0" bindtap='checkCurrent'>关注</view>
  <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}' data-current="1" bindtap='checkCurrent'>收藏</view>
  <view class='tab  {{currentData == 2 ? "tabBorer" : ""}}' data-current="2" bindtap='checkCurrent'>订单</view>
  <view class='tab  {{currentData == 3 ? "tabBorer" : ""}}' data-current="3" bindtap='checkCurrent'>车</view>
</view>
<swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
  <swiper-item>
    <view class='swiper_con'>关注</view>
  </swiper-item>
  <swiper-item>
    <view class='swiper_con'>收藏</view>
  </swiper-item>
  <swiper-item>
    <view class='swiper_con'>订单</view>
  </swiper-item>
  <swiper-item>
    <view class='swiper_con'>车</view>
  </swiper-item>
</swiper>
